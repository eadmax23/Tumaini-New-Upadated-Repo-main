<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Creative - Bootstrap 3 Responsive Admin Template">
    <meta name="author" content="GeeksLabs">
    <meta name="keyword" content="Creative, Dashboard, Admin, Template, Theme, Bootstrap, Responsive, Retina, Minimal">
    <link rel="shortcut icon" href="/img/favicon.png">
   

    <title>Error</title>
    

    <!-- Bootstrap CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <!-- bootstrap theme -->
    <link href="/css/bootstrap-theme.css" rel="stylesheet">
    <!--external css-->
    <!-- font icon -->
    <link href="/css/elegant-icons-style.css" rel="stylesheet" />
    <link href="/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Custom styles -->
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/style-responsive.css" rel="stylesheet" />
    
</head>

<body>
    <!-- container section start -->
    <section id="container" class="">
        <!--header start-->

        <%- include("./partials/header.ejs") %>
        <!--header end-->

        <!--sidebar start-->
        <%- include("./partials/aside.ejs") %>
        <!--sidebar end-->

        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <h3 class="page-header"><i class="fa fa fa-bars"></i> Pages</h3>
                        <ol class="breadcrumb">
                            <li><i class="fa fa-home"></i><a href="/dashboard">Home</a></li>
                            <li><i class="fa fa-bars"></i>Pages</li>
                            <li><i class="fa fa-square-o"></i>Pages</li>
                        </ol>
                    </div>
                </div>
                <!-- page start-->
                <div class="col-md-9 portlets">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="pull-left"><h1 style="font-weight: bold; color: black; text-decoration: underline; font-size: 3rem;">Error in uploading the image:</h1>
                                <% if(errors.length > 0) { %>
                                    <% errors.forEach(error => { %>
                                        <h2 style="color: magenta;font-size: 2.2rem;">
                                            <%= error.name %>
                                        </h2>
                                        
                                   <%})%>
                                <%}%>
                            </div>
                            <div class="widget-icons pull-right">
                                <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
                                <a href="#" class="wclose"><i class="fa fa-times"></i></a>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="panel-body">
                            <div class="padd">

                                <div class="form quick-post">
                                    <!-- Edit profile form (not working)-->
                                    <div class="form-horizontal">
                                        <form action="/api/image/updateimage/<%= id.id %>" method="post" id="form" enctype="multipart/form-data">
                                        <div class="form-group ">
                                            <label for="fname" class="control-label col-lg-2">Event name <span class="required">*</span></label>
                                            <div class="col-lg-10">
                                                <input class="form-control" id="fname" name="eventname" minlength="3" maxlength="200" type="text" required />
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="fname" class="control-label col-lg-2">Event short description <span class="required">*</span></label>
                                            <div class="col-lg-10">
                                                <input class="form-control" id="fname" name="eventdecription" type="text" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-lg-2" for="photo">Upload Photo</label>
                                            <div class="col-lg-10">
                                                <input type="file" name="eventimage" id="photo" required> <br>
                                            </div>
                                        </div>

                                        <!-- Buttons --> 
                                        <div class="form-group">
                                            <!-- Buttons -->
                                            <div class="col-lg-offset-2 col-lg-9">
                                                <button type="submit" class="btn btn-primary">Publish</button>
                                            </div>
                                        </div>
                                    </form>
                                    </div>
                                </div>


                            </div>
                            <div class="widget-foot">
                                <!-- Footer goes here -->
                            </div>
                        </div>
                    </div>

                </div>
                <!-- page end-->
            </section>
        </section>
        
        <script defer src="/validateInfo.js"></script>
        <!--main content end-->
        <%- include("./partials/creator.ejs") %>
        
    <%- include("./partials/script.ejs") %>


    
</body>

</html>